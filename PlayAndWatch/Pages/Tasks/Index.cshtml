@page
@model RecommendationSystem.Pages.Tasks.IndexModel
@{
    ViewData["Title"] = "Мои задания";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .card {
            transition: transform 0.3s;
            height: 100%;
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 10px 20px rgba(0,0,0,0.12);
            }

            .card a {
                text-decoration: none;
                color: inherit;
            }

        /* Стили для страницы квестов */
        .quest-section {
            padding: 2rem 0;
        }

        .quest-badge {
            font-size: 0.8rem;
            padding: 0.35em 0.65em;
        }

        .progress {
            height: 10px;
            margin: 10px 0;
        }

        .quest-card {
            border-left: 4px solid #6c757d;
            margin-bottom: 1.5rem;
            transition: all 0.3s ease;
        }

            .quest-card.completed {
                border-left-color: #28a745;
                background-color: #f8f9fa;
            }

            .quest-card.active {
                border-left-color: #007bff;
            }

        .quest-reward {
            color: #ffc107;
            font-weight: bold;
        }

        .quest-icon {
            font-size: 1.5rem;
            margin-right: 10px;
            color: #6c757d;
        }

        .quest-card.completed .quest-icon {
            color: #28a745;
        }

        .quest-card.active .quest-icon {
            color: #007bff;
        }
    </style>
}

<div class="container quest-section">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-tasks me-2"></i>Мои квесты</h2>
            <p class="text-muted">Выполняйте задания и получайте награды!</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card quest-card completed shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-play-circle quest-icon"></i>
                        <h5 class="card-title mb-0">Фантастический-новичок</h5>
                    </div>
                    <p class="card-text">Посмотрите фильм "интерстеллар"</p>
                    <div class="progress">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 100%;" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">1/1</div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-2">
                        <span class="badge bg-success quest-badge">Завершено</span>
                        <span class="quest-reward"><i class="fas fa-coins"></i> +350 очков</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card quest-card shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-gamepad quest-icon"></i>
                        <h5 class="card-title mb-0">Игровой старт</h5>
                    </div>
                    <p class="card-text">Поиграйте в "The Witcher 3: Wild Hunt"</p>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">0/10</div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-2">
                        <span class="badge bg-secondary quest-badge">Не начат</span>
                        <span class="quest-reward"><i class="fas fa-coins"></i> +100 очков</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title"><i class="fas fa-trophy me-2"></i>Ваш прогресс</h5>
                    <div class="row">
                        <div class="col-md-4">
                            <p class="text-muted">Активных заданий</p>
                            <h3 class="text-primary">0</h3>
                        </div>
                        <div class="col-md-4">
                            <p class="text-muted">Завершено</p>
                            <h3 class="text-success">1</h3>
                        </div>
                        <div class="col-md-4">
                            <p class="text-muted">Всего очков</p>
                            <h3 class="text-warning">350</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>