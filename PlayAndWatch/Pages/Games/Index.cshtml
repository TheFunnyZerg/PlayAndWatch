@page
@model RecommendationSystem.Pages.Games.IndexModel
@{
    ViewData["Title"] = "Рекомендации игр";
}

<div class="container">
    <h2 class="mb-4">Рекомендуемые игры для вас</h2>

    <div class="row">
        @foreach (var game in Model.Games)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@game.ImageUrl" class="card-img-top" alt="@game.Title">
                    <div class="card-body">
                        <h5 class="card-title">@game.Title</h5>
                        <div class="mb-2">
                            @for (int i = 0; i < 5; i++)
                            {
                                <i class="fas fa-star @(i < game.Rating ? "text-warning" : "text-secondary")"></i>
                            }
                            <span class="ms-2">@game.Rating.ToString("0.0")</span>
                        </div>
                        <p class="card-text">@game.Description</p>
                        <div class="mb-2">
                            @foreach (var genre in game.Genres)
                            {
                                <span class="badge bg-primary me-1">@genre</span>
                            }
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <small class="text-muted">Вышло @game.ReleaseDate.ToString("yyyy")</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>