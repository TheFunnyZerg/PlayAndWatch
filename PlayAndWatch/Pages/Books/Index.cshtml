@page
@model RecommendationSystem.Pages.Books.IndexModel
@{
    ViewData["Title"] = "Рекомендации книг";
}

<div class="container">
    <h2 class="mb-4">Рекомендуемые книги для вас</h2>

    <div class="row">
        @foreach (var book in Model.Books)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@book.ImageUrl" class="card-img-top" alt="@book.Title">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <div class="mb-2">
                            @for (int i = 0; i < 5; i++)
                            {
                                <i class="fas fa-star @(i < book.Rating ? "text-warning" : "text-secondary")"></i>
                            }
                            <span class="ms-2">@book.Rating.ToString("0.0")</span>
                        </div>
                        <p class="card-text">@book.Description</p>
                        <div class="mb-2">
                            @foreach (var genre in book.Genres)
                            {
                                <span class="badge bg-primary me-1">@genre</span>
                            }
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <small class="text-muted">Вышло @book.ReleaseDate.ToString("yyyy")</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>